<h2 id="title">Welcome to Auth0 Ember Simple Auth</h2>

<header>
  {{#if session.isAuthenticated}}
    <h5>You are currently logged as: {{session.data.authenticated.profile.email}}</h5>
    {{logout-button}}
  {{else}}
    <h4>You are currently not logged in.</h4>
    {{#link-to "login"}}Login{{/link-to}}
  {{/if}}
</header>

{{outlet}}
